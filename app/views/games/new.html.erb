<h1>New game</h1>
<ul class="flex">
  <% @letters.each do |letter| %>
    <li class="remove_bullet border font_white background_blue padding"><%= letter  %></li>
  <% end %>
</ul>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters_array, @letters %>
  <input type="text" name="game" placeholder="What is the longest word you can find">
  <input type="submit" value="Play">
</form>
